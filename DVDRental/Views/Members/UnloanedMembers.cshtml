@model IEnumerable<DVDRental.Models.ViewModels.UnloanedMembersVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-primary table-hover float-center" style="width:auto">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MemberFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DVDTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanedDays)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
