@model DVDRental.Models.DVDTitle

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.Title
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-body">
                        <p class="card-text">
                            <b>Studio: </b>
                            <a asp-controller="Studios" asp-action="Details" asp-route-id="@Model.StudioId">
                                @Model.Studios.StudioName
                            </a>
                        </p>
                        <p class="card-text">
                            <b>Producer: </b>
                            <a asp-controller="Producers" asp-action="Details" asp-route-id="@Model.ProducerNumber">
                                @Model.Producers.ProducerName
                            </a>
                        </p>
                        <p class="card-text"><b>Category: </b>@Model.DVDCategory.CategoryDescription</p>
                        <p class="card-text"><b>Release Date: </b>@Model.DateRelease.ToString("dd MMM yy")</p>
                        <p class="card-text"><b>Standard Charge: </b>@Model.StandardCharge.ToString()</p>
                        <p class="card-text"><b>Penalty Charge: </b>@Model.PenaltyCharge.ToString()</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-backspace"></i>Back to List
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>