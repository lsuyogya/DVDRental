@model DVDRental.Models.ViewModels.AddCastVM;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DVDTitle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCast">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="CastMembers" class="control-label"></label>
                <select asp-for="CastMembers" class ="form-control" asp-items="ViewBag.ActorId"></select>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
              <a class="btn btn-success" asp-controller ="Actors" asp-action="Create"><i class="bi bi-plus-circle"></i>Add an actor</a>
         <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-backspace"></i>Back to List</a>
          </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
